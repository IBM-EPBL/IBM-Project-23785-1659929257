#LED
from gpiozero import Button 
button = Button(21) 
while True: 
        print(button.is_pressed)
while True: 
        if button.is_pressed: 
              print("Hello")
        else: 
             print("Goodbye")
while True: 
        button.wait_for_press() 
        print("Pressed")   
        button.wait_for_release()
        print("Released")
from gpiozero import Button, LED
button = Button(21)
while True: 
        button.wait_for_press() 
        led.on() button.
        wait_for_release() 
        led.off()
        
#trafficlight 
from gpiozero import Button, TrafficLights
lights = TrafficLights(25, 8, 7)
while True: 
        button.wait_for_press()
        lights.on() 
        button.wait_for_release() 
        lights.off()
from gpiozero import Button, TrafficLights, Buzzer
buzzer = Buzzer(15)
while True: 
        lights.on() 
        buzzer.off() 
        button.wait_for_press() 
        lights.off() 
        buzzer.on() 
        button.wait_for_release()
while True: 
        lights.blink() 
        buzzer.beep() 
        button.wait_for_press() 
        lights.off() buzzer.off()  
        Button.wait_for_release()
from time import sleep
while True: 
        lights.green.on() 
        sleep(1)             
        lights.ber.on()
        lights.red.on() 
        sleep(1) 
        lights.off()
while True: 
        button.wait_for_press() 
        lights.green.on() 
       sleep(1) 
       lights.amber.on() 
       sleep(1) 
       lights.red.on() 
       sleep(1) 
       lights.off()
